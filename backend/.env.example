# ===========================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# ===========================================
DATABASE_URL="postgresql://username:password@localhost:5432/imobigestor"

# ===========================================
# CONFIGURAÇÕES DE AUTENTICAÇÃO
# ===========================================
JWT_SECRET="sua_chave_secreta_super_forte_aqui_com_pelo_menos_32_caracteres"
JWT_EXPIRES_IN="7d"

# ===========================================
# CONFIGURAÇÕES DO SERVIDOR
# ===========================================
PORT=3001
NODE_ENV=development
# Use uma lista separada por vírgulas para múltiplas origens permitidas
# Exemplo: CORS_ORIGIN="https://seu-dominio.com,https://app.seu-dominio.com"
CORS_ORIGIN="http://localhost:8080"
# URL do frontend para CORS do Socket.IO (deve bater com a porta do Vite)
# Em dev, o Vite está configurado para rodar na porta 8080 em vite.config.ts
FRONTEND_URL="http://localhost:8080"

# ===========================================
# CONFIGURAÇÕES DE LOGS
# ===========================================
LOG_LEVEL=info
LOG_FILE_PATH="./logs"
LOG_MAX_SIZE="20m"
LOG_MAX_FILES="14d"

# ===========================================
# CONFIGURAÇÕES DE UPLOAD DE ARQUIVOS
# ===========================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH="./uploads"
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/pdf"

# ===========================================
# CONFIGURAÇÕES DE EMAIL (FUTURO)
# ===========================================
SMTP_HOST=""
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=""
SMTP_PASS=""
EMAIL_FROM="noreply@imobigestor.com"

# ===========================================
# CONFIGURAÇÕES DE BACKUP
# ===========================================
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_PATH="./backups"

# ===========================================
# CONFIGURAÇÕES DE RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# CONFIGURAÇÕES DE NOTIFICAÇÕES
# ===========================================
NOTIFICATION_ENABLED=true
WEBSOCKET_PORT=3002